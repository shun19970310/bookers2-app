<h2 class="mt-3">New book</h2>
<%= form_with model: newbook, url: '/books', method: :post do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <div>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <div>
      <%= f.text_area :body %>
    </div>
  </div>

  <div class="form-group">
      <%= f.submit 'Create Book' %>
  </div>
<% end %>