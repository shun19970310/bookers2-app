  <%= form_with model: book do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class:"form-control book_title col-xs-12" %>
    </div>
    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body, class:"form-control book_body col-xs-12" %>
    </div>
    <div class="form-group">
      <%= f.submit class:"btn btn-success" %>
    </div>
  <% end %>