<div class="Notification">
 <p style="color:green;"><%= flash[:create] %></p>
</div>
<div class="Notification">
 <p style="color:green;"><%= flash[:update] %></p>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved: %>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<main>
 <p id="notice">
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'users/info', user: @user %>
     <%= render 'books/newbook', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
    <% if @book.user == current_user %>
    <table class="table table-hover table-inverse">
      <tbody>
       <tr>
        <td>
         <%= link_to user_path(@user.id) do %>
         <%= attachment_image_tag @user, :profile_image, size:"50x50", fallback: "no_image.jpg"%>
         <% end %>
        <p><%= link_to @user.name, user_path(@user.id) %></p>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_49454" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_49454" %></td>
       </tr>
    <% else %>
    <table class="table table-hover table-inverse">
      <tbody>
       <tr>
        <td>
         <%= link_to user_path(@user.id) do %>
         <%= attachment_image_tag @user, :profile_image, size:"50x50", fallback: "no_image.jpg"%>
         <% end %>
         <p><%= link_to @user.name, user_path(@user.id) %></p>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
       </tr>
    <% end %>
      </tbody>
    </table>
    </div>
   </div>
  </div>
